<!--Avalon-->
<window id="12">
	<defaultcontrol always="true">3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>		
		
		<!--Global Background-->
		<include>GlobalBackground</include>		
		<!--Time & Weather-->
		<include>TimeWeather</include>	
		<!--Header Settings-->
		<include>HeaderSettings</include>	
		<!--Avalon Version-->
		<include>AvalonVersion</include>	
	
		<!--Panel-->
		<control type="image">				
			<posx>0</posx>
			<posy>100</posy>
			<width>1893</width>
			<height>900</height>
			<texture>views/settings_panel.png</texture>
			<include>animation_visible_hidden</include>
			<include>animation_hoverslide</include>
		</control>			
		
		<!--Button-->
		<control type="grouplist" id="3">			
			<description>Button Area</description>
			<posx>60</posx>
			<posy>200</posy>
			<width>450</width>
			<height>750</height>
			<itemgap>-</itemgap>
			<onleft>5</onleft>
			<onright>5</onright>
			<onup>3</onup>
			<ondown>3</ondown>
			<orientation>vertical</orientation>
			<include>animation_visible_hidden</include>
			<include>animation_hoverslide</include>
		</control>
		<control type="grouplist" id="5">			
			<description>Control Area</description>
			<posx>600</posx>
			<posy>200</posy>
			<width>1230</width>
			<height>750</height>
			<itemgap>3</itemgap>
			<onleft>3</onleft>
			<onright>3</onright>
			<onup>5</onup>
			<ondown>5</ondown>
			<orientation>vertical</orientation>
			<include>animation_visible_hidden</include>
			<include>animation_hoverslide</include>
		</control>
		<control type="button" id="7">
			<description>Default Button</description>
			<focusedcolor>black</focusedcolor>
			<font>Reg32</font>
			<align>left</align>
			<height>50</height>			
		</control>
		<control type="radiobutton" id="8">
			<description>Default Radio Button</description>	
			<focusedcolor>black</focusedcolor>
			<font>Reg32</font>
			<align>left</align>
			<height>50</height>					
		</control>
		<control type="spincontrolex" id="9">
			<description>Default Spin Control</description>		
			<focusedcolor>black</focusedcolor>
			<font>Reg32</font>
			<align>left</align>
