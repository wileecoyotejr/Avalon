<!--Avalon-->
<window id="2">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50</views>

	<controls>
	
		<!--Global Background-->
		<include>GlobalBackground</include>
		<!--Time & Weather-->
		<include>TimeWeather</include>	
		<!--Header Pictures-->
		<include>HeaderPictures</include>	
		
		<!--Hidden Button-->
		<control type="radiobutton" id="19">
			<description>Filter (hidden)</description>
			<include>HiddenButton</include>
		</control>
		
		<!--Fanart-->	
		<control type="group">	
			<visible>Control.IsVisible(50)</visible>					
			<include>animation_visible_hidden</include>
			<include>animation_hoverslide</include>				
			<control type="image">			
				<posx>0</posx>				
				<posy>129</posy>
				<width>1200</width> 
				<height>590</height>						
				<texture background="true" diffuse="views/view50matte.png">backgrounds/pictures.png</texture>						
				<aspectratio scalediffuse="false" align="center">scale</aspectratio>
				<fadetime>400</fadetime>						
			</control>
		</control>

		<!--Views-->
		<include>View_50_List</include>	

		<!--Sub Menu Tab Left-->
		<include>SubMenuTabLeft</include>
		
		<!--Sub Menu-->
		<control type="group"> 
			<posx>15</posx>
			<posy>50</posy>
			
			<visible>!Window.IsActive(DialogKeyboard.xml)</visible>
			
			<include>animation_visible_hidden</include>
			<include>animation_hoverslide</include>
			<include>animation_sub_menu</include>					

			<!--Panel-->
			<control type="image">
				<posx>-19</posx>
				<posy>360</posy>
				<width>60</width>
				<height>80</height>
				<texture>dialogs/default/arrow-left-black.png</texture>
			</control>			
			<control type="image">				
				<width>500</width>
				<height>800</height>
				<texture border="39">dialogs/default/bg-black.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>	

			<!--Gouplist 9000-->
			<control type="grouplist" id="9000">		
				<posx>21</posx>
				<posy>70</posy>
				<width>458</width>
				<height>650</height>
				<itemgap>3</itemgap>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<orientation>vertical</orientation>
				
				<!--Button-->	
				<control type="label" id="200">			<!--Label Menu-->					
					<width>458</width>
					<align>left</align>
					<textoffsetx>50</textoffsetx>
					<font>Light40</font>
					<textcolor>mainblue</textcolor>	
					<label>$LOCALIZE[41090]:</label>	
				</control>
				<control type="image" id="201">			<!--Seperator-->						
					<width>458</width>					
					<height>20</height>	
					<align>left</align>	
					<texture>common/menu-separator.png</texture>				
				</control>	
				<control type="button" id="3">			<!--Sort-->					
					<include>SubMenuButton</include>			
				</control>
				<control type="togglebutton" id="4">	<!--Ascending-->					
					<include>SubMenuButton</include>
					<label>584</label>
					<altlabel>585</altlabel>					
				</control>
				<control type="button" id="6">			<!--Slideshow-->
					<visible>!ListItem.IsFolder</visible>
					<include>SubMenuButton</include>
					<label>108</label>						
				</control>
				<control type="button" id="7">			<!--Recursive Slideshow-->
					<visible>ListItem.IsFolder</visible>
					<include>SubMenuButton</include>
					<label>108</label>						
				</control>
				<control type="radiobutton" id="9">		<!--Randomise-->					
					<include>SubMenuButton</include>
					<label>13319</label>				
