<!--Titan-->
<window>
  <defaultcontrol always="true">11</defaultcontrol>  
	<controls> 	
		 <control type="group"> 
			  <posx>1120</posx>
			  <posy>100</posy>
			  <include>animation_fade_visible_hidden</include>
			  <include>animation_list</include>				
			
			  <control type="image">	<!--Panel-->
				  <posx>0</posx>
				  <posy>0</posy>
				  <width>750</width>
				  <height>820</height>				
				  <texture>pvr/pvr_channel_osd.png</texture>					
			  </control>
			  <control type="label">	<!--Header Video-->
				  <visible>!pvr.IsPlayingRadio</visible>
				  <posx>100</posx>
				  <posy>40</posy>
				  <width>600</width>
				  <height>50</height>
				  <font>Reg40</font>
				  <textcolor>mainblue</textcolor>		
				  <label>$LOCALIZE[19023] - $INFO[VideoPlayer.ChannelGroup]</label>				
			  </control>
			  <control type="label">	<!--Header Radio-->
				  <visible>pvr.IsPlayingRadio</visible>				
				  <posx>100</posx>
				  <posy>40</posy>
				  <width>600</width>
				  <height>50</height>
				  <font>Reg40</font>
				  <textcolor>mainblue</textcolor>		
				  <label>$LOCALIZE[19024] - $INFO[MusicPlayer.ChannelGroup]</label>							
			  </control>
			  <control type="label">	<!--Info Time Date-->				
				  <posx>100</posx>
				  <posy>90</posy>
				  <width>600</width>
				  <height>50</height>
				  <font>Reg32</font>
				  <textcolor>aawhite</textcolor>
				  <label>$INFO[System.Date(DDD)], $INFO[System.Date(d)] $INFO[System.Date(mmm)] $INFO[System.Date(yyyy)] â€¢ $INFO[System.Time]</label>			
			  </control>
		 				          
        <control type="list" id="11">	<!--List ID=11-->
            <posx>13</posx>
            <posy>170</posy>
            <width>900</width>
            <height>600</height>
            <onleft>-</onleft>
            <onright>-</onright>
            <onup>11</onup>
            <ondown>11</ondown>
            <viewtype label="535">list</viewtype>
            <pagecontrol>70</pagecontrol>
            <scrolltime>200</scrolltime>
            <itemlayout height="100" width="900">					
                <control type="label"><!--Channel Number-->
                    <posx>10</posx>
                    <posy>5</posy>
                    <width>60</width>
                    <height>60</height>
						        <font>Reg35</font>					
						        <textcolor>aawhite</textcolor>
						        <selectedcolor>aawhite</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>      
                    <info>ListItem.ChannelNumber</info>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>40</posy>
                    <width>55</width>
                    <height>55</height>
                    <texture>pvr/icons/pvr_record.png</texture>
                    <visible>ListItem.IsRecording</visible>
                </control>
					      <control type="image"><!--Chanel Icon-->
                    <posx>85</posx>
                    <posy>15</posy>
                    <width>75</width>
                    <height>75</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                </control>
                <control type="image">
                    <!--Now Playing Icon-->
                    <posx>155</posx>
                    <posy>5</posy>
                    <width>55</width>
                    <height>55</height>
                    <fadetime>600</fadetime>
                    <texture>pvr/icons/pvr_play.png</texture>
                    <visible>ListItem.Isplaying</visible>
                </control>
                <control type="label"><!--Channel Name-->
						        <animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying">Conditional</animation>
                    <posx>170</posx>
                    <posy>15</posy>
                    <width>405</width>
                    <height>38</height>
                    <font>Reg30</font>					
						        <textcolor>aawhite</textcolor>  
						        <selectedcolor>aawhite</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label"><!--Channel Now Playing-->
						        <animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying">Conditional</animation>
                    <posx>170</posx>
                    <posy>55</posy>
                    <width>485</width>
                    <height>20</height>
                    <font>Reg25</font>					
						        <textcolor>grey</textcolor> 
						        <selectedcolor>grey</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Title]</label>                       
                </control>
                <control type="progress">
                  <!--Progress Bar-->
                  <description>Progressbar</description>
                  <posx>170</posx>
                  <posy>80</posy>
                  <width>525</width>
                  <height>6</height>
                  <colordiffuse>88FFFFFF</colordiffuse>
                  <visible>ListItem.HasEpg</visible>
                  <info>ListItem.Progress</info>
                </control>
                <control type="image">
                  <!--Separator-->
                  <posx>-57</posx>
                  <posy>0</posy>
                  <width>820</width>
                  <height>20</height>
                  <fadetime>400</fadetime>
                  <texture>common/menu-separator.png</texture>
                </control>
            </itemlayout>
            <focusedlayout height="100" width="900">					
                <control type="image"><!--Slide-->
						      <animation type="Focus" condition="Container(11).OnNext" reversible="false">
							      <effect type="slide" start="0,-100" end="0,0" time="150" tween="Quadratic" easing="out"/>
						      </animation>
						      <animation type="Focus" condition="Container(11).OnPrevious" reversible="false">
							      <effect type="slide" start="0,100" end="0,0" time="150" tween="Quadratic" easing="out"/>
						      </animation>
                  <posx>0</posx>
                  <posy>0</posy>
                  <width>840</width>
                  <height>100</height>
						      <colordiffuse>88ffffff</colordiffuse>
                  <texture flipx="false">common/slider.png</texture>            
                </control>    
                <control type="label"><!--Channel Number-->						
                    <posx>10</posx>
                    <posy>5</posy>
                    <width>60</width>
                    <height>60</height>                       
						        <font>Reg35</font>					
						        <textcolor>mainblue</textcolor>  
						        <selectedcolor>mainblue</selectedcolor>
                    <info>ListItem.ChannelNumber</info>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>40</posy>
                    <width>55</width>
                    <height>55</height>
                    <texture>pvr/icons/pvr_record.png</texture>
                    <visible>ListItem.IsRecording</visible>
                </control>
					      <control type="image"><!--Chanel Icon-->
                    <posx>85</posx>
                    <posy>15</posy>
                    <width>75</width>
                    <height>75</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                </control>
                <control type="image">
                  <!--Now Playing Icon-->
                  <posx>155</posx>
                  <posy>5</posy>
                  <width>55</width>
                  <height>55</height>
                  <fadetime>600</fadetime>
                  <texture>pvr/icons/pvr_play.png</texture>
                  <visible>ListItem.Isplaying</visible>
                </control>
                <control type="label"><!--Channel Name-->
						        <animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying">Conditional</animation>
                    <posx>170</posx>
                    <posy>15</posy>
                    <width>405</width>
                    <height>38</height>
						        <font>Reg30</font>					
						        <textcolor>mainblue</textcolor>   
						        <selectedcolor>mainblue</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label"><!--Channel Now Playing-->
						        <animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying">Conditional</animation>
                    <posx>170</posx>
                    <posy>55</posy>
                    <width>485</width>
                    <height>20</height>
                    <font>Reg25</font>					
						        <textcolor>aawhite</textcolor>  
						        <selectedcolor>aawhite</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Title]</label>                        
                </control>
                <control type="progress">
                    <!--Progress Bar-->
                    <description>Progressbar</description>
                    <posx>170</posx>
                    <posy>80</posy>
                    <width>525</width>
                    <height>6</height>
                    <colordiffuse>88FFFFFF</colordiffuse>
                    <visible>ListItem.HasEpg</visible>
                    <info>ListItem.Progress</info>
                </control>
                <control type="image">
                  <!--Separator-->
                  <posx>-57</posx>
                  <posy>0</posy>
                  <width>820</width>
                  <height>20</height>
                  <fadetime>400</fadetime>
                  <texture>common/menu-separator.png</texture>
                </control>
            </focusedlayout>
        </control>
    </control>
    <control type="scrollbar" id="70">
      <!--Scrollbar-->
      <posx>1835</posx>
      <posy>300</posy>
      <height>580</height>
      <onleft>11</onleft>
      <onright>-</onright>
    </control>
  </controls>
</window>