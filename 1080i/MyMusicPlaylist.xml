<!--Avalon-->
<window id="500">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50</views>

	<controls>

		<!--Global Background-->
		<include>GlobalBackground</include>
		<!--Time & Weather-->
		<include>TimeWeather</include>
		<!--Header Music Playlist-->
		<include>HeaderMusicPlaylist</include>	
		<!--Music_NowPlaying-->			
		<include>NowPlayingMusic</include>		
		<!--Video_NowPlaying-->			
		<include>NowPlayingVideo</include>	
		
		<!--Hidden Button-->
		<control type="radiobutton" id="19">
			<description>Filter (hidden)</description>
			<include>HiddenButton</include>
		</control>
		
		<!--Fanart-->	
		<control type="group">	
			<visible>Control.IsVisible(50)</visible>					
			<include>animation_visible_hidden</include>
			<include>animation_hoverslide</include>
			<control type="image">	
				<posx>0</posx>
				<posy>129</posy>
				<width>1200</width> 
				<height>590</height>							
				<texture background="true" diffuse="views/view_50_matte.png">backgrounds/music.png</texture>				
				<aspectratio scalediffuse="false" align="center">scale</aspectratio>
				<fadetime>400</fadetime>						
			</control>	
		</control>

		<!--Views-->
		<include>View_50_List</include>		
		
		<!--Sub Menu Tab Left-->
		<control type="image">	
			<include>animation_visible_hidden</include>
			<include>animation_fade</include>
			<posx>0</posx>
			<posy>330</posy>
			<width>64</width>
			<height>199</height>
			<texture>dialogs/default/menu-tab.png</texture>				
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">					
				<effect type="fade" start="100" end="0" time="100"/>
			</animation>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">				
				<effect type="fade" start="0" end="100" time="600" delay="600"/>
			</animation>
		</control>	
		
		<!--Sub Menu-->
		<control type="group"> 
			<posx>15</posx>
			<posy>50</posy>
			
			<visible>!Window.IsActive(DialogKeyboard.xml)</visible>
			
			<include>animation_visible_hidden</include>
			<include>animation_hoverslide</include>	
			<include>animation_sub_menu</include>		

			<!--Panel-->
			<control type="image">
				<posx>-19</posx>
				<posy>360</posy>
				<width>60</width>
				<height>80</height>
				<texture>dialogs/default/arrow-left-black.png</texture>
			</control>			
			<control type="image">				
				<width>500</width>
				<height>800</height>
				<texture border="39">dialogs/default/bg-black.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>	

			<!--Gouplist 9000-->
			<control type="grouplist" id="9000">		
				<posx>21</posx>
				<posy>70</posy>
				<width>458</width>
				<height>650</height>
				<itemgap>3</itemgap>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<orientation>vertical</orientation>	

				<!--Buttons-->
				<control type="label" id="200">			<!--Label Menu-->					
					<width>458</width>
					<align>left</align>
					<textoffsetx>50</textoffsetx>
					<font>Light40</font>
					<textcolor>mainblue</textcolor>	
					<label>$LOCALIZE[41090]:</label>	
				</control>
				<control type="image" id="201">			<!--Seperator-->						
					<width>458</width>					
					<height>20</height>	
					<align>left</align>	
					<texture>common/menu-separator.png</texture>				
				</control>					
				<control type="button" id="3">			<!--Button Sort-->					
					<include>SubMenuButton</include>				
				</control>
				<control type="togglebutton" id="4">	<!--Button Ascending-->					
					<include>SubMenuButton</include>	
					<label>584</label>
					<altlabel>585</altlabel>					
				</control>
				<control type="radiobutton" id="20">	<!--Button Shuffle-->					
					<include>SubMenuButton</include>	
					<label>191</label>				
				</control>
				<control type="button" id="21">			<!--Button Save-->					
					<include>SubMenuButton</include>	
					<label>190</label>					
				</control>
				<control type="button" id="22">			<!--Button Clear-->					
					<include>SubMenuButton</include>	
					<label>192</label>					
				</control>
				<control type="button" id="23">			<!--Button Play-->					
					<include>SubMenuButton</include>	
					<label>208</label>					
				</control>
				<control type="image" id="203">			<!--Space-->						
					<width>458</width>					
					<height>20</height>	
					<align>left</align>	
					<texture>common/menu-space.png</texture>				
				</control>		
				<control type="label" id="300">			<!--View:-->						
					<width>458</width>
					<align>left</align>	
					<textoffsetx>50</textoffsetx>
					<font>Light40</font>
					<textcolor>mainblue</textcolor>	
					<label>$LOCALIZE[457]</label>
				</control>	
				<control type="image" id="301">			<!--Seperator-->						
					<width>458</width>					
					<height>20</height>	
					<align>left</align>	
					<texture>common/menu-separator.png</texture>				
				</control>		
				<control type="button" id="302">		<!--View List-->
					<include>SubMenuButton</include>		
					<label>List</label>					
					<onclick>Container.SetViewMode(50)</onclick>
					<onfocus>Skin.Reset(OtherView)</onfocus>					
				</control>	

				
			</control>
		</control>
		
	</controls>
	
</window>